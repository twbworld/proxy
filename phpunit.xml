<?xml version="1.0" encoding="UTF-8"?>
<phpunit
      bootstrap                   ="vendor/autoload.php"
      backupGlobals               = "false"
      backupStaticAttributes      = "false"
      colors                      = "true"
      convertErrorsToExceptions   = "true"
      convertNoticesToExceptions  = "true"
      convertWarningsToExceptions = "true"
      processIsolation            = "false"
      stopOnFailure               = "false">
    <testsuites>
        <testsuite name="TestSuite">
            <directory>tests/</directory>
        </testsuite>
    </testsuites>
    <coverage processUncoveredFiles="true">
        <report>
            <html outputDirectory="../phalcon_shop/public/report/" lowUpperBound="50" highLowerBound="90" />
        </report>
        <include>
            <directory suffix=".php">src/library/</directory>
        </include>
    </coverage>
    <logging>
        <testdoxHtml outputFile="../phalcon_shop/public/report/report.html" />
    </logging>
    <php>
      <env name="phpunit" value="1"/>
    </php>
</phpunit>
